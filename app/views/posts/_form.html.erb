<div class="flex-grow d-flex justify-content-center">  
    <div class="col-md-6">
        <h3> Create New Post </h3>
        <div class="card mt-5">
            <div class="card-body">
                <%= form_for @post do |f| %>

                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control" %>   
                </div>

                <div class="form-group">
                    <%= f.label :content %>
                    <%= f.text_area :content, class: "form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %>
                </div>

                <%= f.submit "Create Post", class: "btn btn-outline-primary" %>
                <%= link_to "Back", posts_path, class: "btn btn-outline-secondary" %>
    
            <% end %>
            </div>
        </div>
    </div>
</div>