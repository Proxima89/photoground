<div class="container col-md-12 mt-5 text-center">
    <div class="sub-container">
        <div class="card-header">
            <h5><%= @post.category.category %> </h5>
        </div>

        <div class="card-body">
            <ul class="list-group">
                <h3><%= @post.title %></h3>
            </ul>
                <% if @post.photo.attached? %>
                    <%= cl_image_tag @post.photo.key, width: 1400, height: 1200, crop: "fit"%>                                 
                <% else %>
                 <img src="https://images.unsplash.com/photo-1520116468816-95b69f847357?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" width="1400", height="1200">
                <% end %>
                <div class="d-flex justify-content-center mt-4">
                    <li class="justify-content-around text-area" style="display: block; border: solid 1px; width:550px; height: 620;">
                    <p class="mt-2 float-center"><strong>Descriptipn:</strong> <div class="text-area float-center"><%= @post.content %> </p> </div>                      
                    </li>                       
                </div>
        </div>
        <div class="justify-content-center">
        <% if current_user %>
            <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-primary" %>
            <%= link_to 'delete',{ controller: "posts", action: "destroy", id: @post.id }, 
                data: { confirm: 'Are you sure?' }, 
                method: :delete %>
        <% end %>
            <%= link_to "Back", posts_path, class: "btn btn-secondary" %>          
        </div>  
    </div>
</div>
<br>
<%= render 'footer' %>
