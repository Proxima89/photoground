<div class="container text-center mt-5" style="display: flex; justify-content:center;">
    <div class="col-md-4 mt-3">
        <div class="card">
            <div class="card-header">
               <h5> <%= @post.category.category %> </h5>
            </div>
            <div class="card-body">
                <ul class="list-group">                      
                       <h5><%= @post.title %></h5>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                    <p><%= @post.content %> </p>                      
                    </li>
                </ul>
            </div>
        </div>
        <div class="justify-content-center text-center mt-3">
            <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-primary" %>
            <%= link_to "Back", posts_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", post_path(@post.id), method: :delete, class: "btn btn-danger" %>     
        </div>
    </div>    
</div>

