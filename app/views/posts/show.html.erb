<div class="container col-md-12 mt-5 text-center">
    <div class="sub-container">
        <div class="card-header">
            <h5><%= @post.category.category %> </h5>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <h3><%= @post.title %></h3>
            </ul>
            <% if @post.photo.attached? %> <%# Checks if image have been uploaded, and if not will render the default one %>
                <%= cl_image_tag @post.photo.key, width: 1400, height: 1200, crop: "fit", :class => "rounded w-100" %>                                 
            <% else %>
                <img src="https://images.unsplash.com/photo-1520116468816-95b69f847357?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" width="1400", height="1200">
            <% end %>
            <div class="d-flex justify-content-center mt-4">
                <li class="card justify-content-around text-area rounded" style="display: block; border: light 1px; width: 80%; padding: 10px;">
                <h6 class="mt-2 mb-2 float-center"><strong>Descriptipn:</strong> </h6>                  
                    <div class="text-area float-center "><%= @post.content %>  </div> 
                    <br>                     
                </li>                       
            </div>
        </div>
        <div class="justify-content-around d-flex">
            <%= link_to "Back", posts_path, class: "btn btn-secondary" %>          
        <% if current_user %><%# This line checks if user or admin has been entered the page, and depending on that will render the control buttons %>
            <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-primary" %>
            <%= button_to 'delete',{ controller: "posts", action: "destroy", id: @post.id }, 
                :onclick => "return confirm('Are you sure you want to delete this post?')", method: :delete, :class => "btn btn-warning" %>
        <% end %>
        </div>  
    </div>
</div>
<br>
<%= render 'footer' %>
