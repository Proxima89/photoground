<div class="container">
    <div class="row">
        <% @post.each do |post| %>
            <div class="col-md-4">
                <div class="card mt-3">           
                    <div class="card-body">
                        <h3> <%= link_to post.title, post_path(post.id) %> </h3>                
                            <%= link_to "View", post_path(post.id), class: 'btn btn-primary' %>                
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

