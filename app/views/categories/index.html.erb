<div class="container mt-5">
  <br>
  <div class="card" style="text-align: center;">
  <hr style="height:2px; border-width:0; color:white; background-color:black;">
    <div class="card-title">
      <h1>Categories</h1>
      <%= link_to 'Create New Category', new_category_path %>
    </div>
    <div class="card-body" style="display: flex; justify-content: center; text-align: left;">
    <table>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.category %></td>  
            <td><div class="btn btn-outlined"><%= link_to 'Show', category %><br></td> </div>
            <td><div class="btn btn-outlined"><%= link_to 'Edit', edit_category_path(category) %></td></div>
            <td><div class="btn btn-outlined"> <%= button_to 'Destroy', category, method: :delete, :onclick => "return confirm('Are you sure you want to delete this category?')", class: "btn btn-outlined" %> </td></div>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
      <p id="notice"><%= notice %></p>
      <hr style="height:2px; border-width:0; color:white; background-color:black;">
  </div>
</div>
