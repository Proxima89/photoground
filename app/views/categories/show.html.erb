<div class="container">
  <div class="card text-center">
  <hr style="height:2px; border-width:0; color:white; background-color:black;">
    
    <div class="card mt-5" style="display: flex; text-align: center;">
      <strong>Category:</strong>
      <div class="card-title mt-3" style="color: green;">       
        <h3 style="font-family: serif; "> <%= @category.category %> </h3>
      </div>
      <div class="card-body" style="justify-content: space-around; display: flex;">
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-outline-success"  %> 
        <%= link_to 'Back', categories_path, class: "btn btn-outline-secondary"  %>
      </div>
    </div>
    <p id="notice" style="color: orange;"><%= notice %></p>
    <hr style="height:2px; border-width:0; color:white; background-color:black;">
  </div>  
</div>
